@model List<DispositivoViewModel>

@{
    ViewData["Title"] = "Dispositivo";
}
<link rel="stylesheet" href="~/css/usuario.css">
<link rel="stylesheet" href="~/css/site.css">
<script type="text/javascript" src="~/js/dispositivo.js"></script>

<section class="home-section">

    <h1 class="text">Listagem Dispositivo</h1>
    <br />
    <br />
    <table class="table table-hover">
        <tr>
            <th style="text-align:center">ID</th>
            <th style="text-align:center">NOME</th>
            <th style="text-align:center">DESCRIÇÃO</th>
            <th style="text-align:center">DATA DE CRIAÇÃO</th>
            <th style="text-align:center">AÇÕES</th>
        </tr>
        @foreach (var dispositivo in Model)
        {
            <tr>
                <td style="text-align:center">@dispositivo.Id</td>
                <td style="text-align:center">@dispositivo.Nome</td>
                <td style="text-align:center">@dispositivo.Descricao</td>
                <td style="text-align:center">@dispositivo.DataCriacao.ToShortDateString()</td>

                @* A SP TERA QUE TRAZER SOMENTE OS DISPOSITIVOS DO USUARIO ATUAL, ADMINISTRADOR PODERÁ VER TODAS - não foi feito *@
                <td style="text-align:center">
                    <a href="/dispositivo/edit?id=@dispositivo.Id"> <span class="bx bxs-pencil icon-action"></span></a>
                    <a href="#" onclick="dispositivo.confirma(@dispositivo.Id)"> <span class="bx bxs-trash-alt icon-action"></span></a>
                </td>
            </tr>
        }
    </table>
    <a href="/dispositivo/create" class="btn btn-register">Novo Registro</a>
</section>
<div class="delete">
    <dialog id="deleteModal" style="padding: 40px;">
        <div> <i class="bx bx-alarm-exclamation" style="font-size: 100px; margin-left: 32%;"> </i> </div>
        <div class="text" style="font-size: 25px !important;">Deseja realmente excluir?</div>
        <br />
        <div>
            <a class="btn" href="#" onclick="document.getElementById('deleteModal').close();" style="color: darkred; margin-left:7%;">Cancelar</a>
            <a class="btn confirm-delete" href="#">Confirmar</a>
        </div>
    </dialog>
</div>