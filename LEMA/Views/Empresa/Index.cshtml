@model List<EmpresaViewModel>

@{
    ViewData["Title"] = "Cadastro Empresa";
}

<link rel="stylesheet" href="~/css/usuario.css">
<script type="text/javascript" src="~/js/empresa.js"></script>

<div class="padding-zero">

    <h2>Listagem de Empresas</h2>
    <br />
    <br />
    <table class="table table-responsive table-hover">
        <tr>
            <th style="text-align:center">FOTO</th>
            <th style="text-align:center">NOME</th>
            <th style="text-align:center">TELEFONE</th>
            <th style="text-align:center">AÇÕES</th>
        </tr>
        @foreach (var empresa in Model)
        {
            <tr>
                <td>
                    @if (string.IsNullOrEmpty(empresa.ImagemEmBase64))
                    {
                        <img id="imgPreview" src="~/img/Company-Icon.png" class="img-responsive" width="50">
                    }
                    else
                    {
                        <img id="imgPreview" src="data:image/jpeg;base64,@empresa.ImagemEmBase64" class="img-responsive" width="50">
                    }
                </td>
                <td style="text-align:center">@empresa.Nome</td>
                <td style="text-align:center">@empresa.Telefone</td>
                <td style="text-align:center">
                    <a href="/empresa/edit?id=@empresa.Id"> <span class="bx bxs-pencil"></span></a>
                    <a href="/empresa/delete?id=@empresa.Id"> <span class="bx bxs-trash-alt"></span></a>
                </td>

            </tr>
        }
    </table>
    <a href="/empresa/create" class="btn btn-register">Novo Registro</a>
</div>
