@model UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Jogos</h2>
<form action="Save" method="post">
    <label for="Id" class="control-label">ID</label>

    <input type="hidden" value="@ViewBag.Operacao" name="operacao" />
    <br />
    @if (ViewBag.Operacao != "I")
    {
        <input type="hidden" name="Id" value="@Model.Id" />
    }
    <br />
    <span asp-validation-for="Id" class="text-danger"></span>
    <br />
    <br />
    <label for="Usuario" class="control-label">Usuario</label>
    <br />
    <input type="text" Name="Usuario" value="@Model.Usuario" />
    <br />
    <span asp-validation-for="Usuario" class="text-danger"></span>
    <br />
    <label for="Senha" class="control-label">Senha</label>
    <br />
    <input type="text" Name="Senha" value="@Model.Senha" />
    <br />
    <span asp-validation-for="Senha" class="text-danger"></span>
    <br />
    <label for="Perfil" class="control-label">Perfil</label>
    <br />
    <select asp-for="Perfil" class="form-control">
        <option value="">Selecione...</option> <!-- Opção Selecione adicionada -->
        <option value="Padrão">Padrão</option>
        <option value="Administrador">Administrador</option>
    </select>
    <br />
    <span asp-validation-for="Perfil" class="text-danger"></span>
    <br />
    <input type="submit" class="btn btn-success" value="Salvar dados" />
    <br />

</form>
